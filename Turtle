import turtle
def draw_square():
    window = turtle.Screen()
    window.bgcolor("yellow")

    
    brad = turtle.Turtle()
    brad.shape("circle")
    brad.color("green")
    brad.speed(2)
    brad.forward(100)
    brad.right(90)
    brad.forward(100)
    brad.right(90)
    brad.forward(100)
    brad.right(90)
    brad.forward(100)
    brad.right(90)
